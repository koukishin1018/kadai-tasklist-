<%= form_with(model: task, local: true) do |f| %>
    <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_message.each do |msg| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>

<%= link_to '一覧に戻る', tasks_path %>
